<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project osmanx with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR file Export Wizard-->
    <!--ANT 1.7 is required-->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="/home/foltin/programming/workspace"/>
    <property name="dir.jarfile" value="/home/foltin/programming/java/osmand/dist"/>
	<jar destfile="${dir.jarfile}/Resources.jar">
        <zipfileset dir="${dir.buildfile}/../OsmAnd-resources" includes="rendering_styles/**"/>
        <zipfileset dir="${dir.buildfile}/../Osmand/OsmAnd/assets" includes="bundled_assets.xml"/> 
	</jar>
	<target name="create_run_jar">
        <jar destfile="${dir.jarfile}/OffRoad.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="net.sourceforge.offroad.OsmWindow"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ commons-logging-1.1.1.jar gnu-trove-osmand.jar junidecode-0.1.jar kxml2-2.3.0.jar Resources.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${dir.buildfile}/bin"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="commons-logging-1.1.1.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="gnu-trove-osmand.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="junidecode-0.1.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="kxml2-2.3.0.jar"/>
            <zipfileset dir="${dir.jarfile}" includes="Resources.jar"/>
        </jar>
        <jar destfile="${dir.jarfile}/GeoServer.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="net.sourceforge.offroad.GeoServer"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ commons-logging-1.1.1.jar gnu-trove-osmand.jar junidecode-0.1.jar kxml2-2.3.0.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${dir.buildfile}/bin"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="commons-logging-1.1.1.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="gnu-trove-osmand.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="junidecode-0.1.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="kxml2-2.3.0.jar"/>
        </jar>
    </target>
</project>
